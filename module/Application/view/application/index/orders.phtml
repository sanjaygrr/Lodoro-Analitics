<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Inicialización de selectores y elementos DOM
        const filterDatesBtn = document.getElementById('filterDatesBtn');
        const dateFilterModal = new bootstrap.Modal(document.getElementById('dateFilterModal'));
        const applyDateFilter = document.getElementById('applyDateFilter');
        
        const statusFilterSelect = document.getElementById('statusFilter');
        const marketplaceFilterSelect = document.getElementById('marketplaceFilter');
        
        const updateStatusBtns = document.querySelectorAll('.update-status-btn');
        const updateStatusModal = new bootstrap.Modal(document.getElementById('updateStatusModal'));
        
        const updateCarrierBtns = document.querySelectorAll('.update-carrier-btn');
        const updateCarrierModal = new bootstrap.Modal(document.getElementById('updateCarrierModal'));
        
        const selectAllCheckbox = document.getElementById('selectAllOrders');
        const orderCheckboxes = document.querySelectorAll('.order-checkbox');
        
        // Funcionalidad de filtro por fecha
        if (filterDatesBtn) {
            filterDatesBtn.addEventListener('click', function() {
                dateFilterModal.show();
            });
        }
        
        if (applyDateFilter) {
            applyDateFilter.addEventListener('click', function() {
                document.getElementById('dateFilterForm').submit();
            });
        }
        
        // Funcionalidad de filtros select
        if (statusFilterSelect) {
            statusFilterSelect.addEventListener('change', function() {
                const currentUrl = new URL(window.location.href);
                
                if (this.value) {
                    currentUrl.searchParams.set('status', this.value);
                } else {
                    currentUrl.searchParams.delete('status');
                }
                
                currentUrl.searchParams.set('page', 1); // Reset page
                window.location.href = currentUrl.toString();
            });
        }
        
        if (marketplaceFilterSelect) {
            marketplaceFilterSelect.addEventListener('change', function() {
                const currentUrl = new URL(window.location.href);
                
                if (this.value) {
                    currentUrl.searchParams.set('marketplace', this.value);
                } else {
                    currentUrl.searchParams.delete('marketplace');
                }
                
                currentUrl.searchParams.set('page', 1); // Reset page
                window.location.href = currentUrl.toString();
            });
        }
        
        // Funcionalidad de selección de órdenes
        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', function() {
                orderCheckboxes.forEach(checkbox => {
                    checkbox.checked = this.checked;
                });
            });
        }
        
        // Funcionalidad de actualización de estado
        updateStatusBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const orderId = this.dataset.id;
                const table = this.dataset.table;
                
                document.getElementById('statusOrderId').value = orderId;
                document.getElementById('statusTable').value = table;
                
                updateStatusModal.show();
            });
        });
        
        if (document.getElementById('saveStatusBtn')) {
            document.getElementById('saveStatusBtn').addEventListener('click', function() {
                // Aquí iría el código para enviar la solicitud AJAX para actualizar el estado
                alert('Funcionalidad en desarrollo: Actualizar estado');
                updateStatusModal.hide();
            });
        }
        
        // Funcionalidad de asignación de transportista
        updateCarrierBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const orderId = this.dataset.id;
                const table = this.dataset.table;
                
                document.getElementById('carrierOrderId').value = orderId;
                document.getElementById('carrierTable').value = table;
                
