        <!-- Script para la funcionalidad del navbar -->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Referencias a elementos del DOM
                const sidebar = document.getElementById('sidebar');
                const toggleBtnBottom = document.getElementById('toggleBtnBottom');
                const sidebarOverlay = document.getElementById('sidebarOverlay');
                const mobileMenuToggle = document.getElementById('mobileMenuToggle');
                const navNotificationsBtn = document.getElementById('navNotificationsBtn');
                const notificationsPanel = document.getElementById('notificationsPanel');
                const closeNotifications = document.getElementById('closeNotifications');
                const overlayNotifications = document.getElementById('overlayNotifications');
                const userDropdownBtn = document.getElementById('userDropdownBtn');
                const userDropdownMenu = document.getElementById('userDropdownMenu');
                
                // Verificar si estamos en la página de login
                const isLoginPage = document.querySelector('.login-container') !== null;
                
                // Si estamos en la página de login, no ejecutamos el código del sidebar
                if (isLoginPage) return;
                
                // Verificar existencia de elementos
                if (!sidebar) {
                    console.error("Elementos críticos del sidebar no encontrados");
                    return;
                }
                
                // Detectar si es dispositivo móvil
                const isMobile = window.innerWidth < 992;
                
                // Función para alternar el estado del sidebar según el dispositivo
                function toggleSidebar() {
                    if (isMobile) {
                        // En móviles, el botón inferior también debe cerrar el menú
                        sidebar.classList.remove('mobile-open');
                        sidebarOverlay.classList.remove('show');
                        document.body.style.overflow = '';
                        
                        // Restaurar el icono de hamburguesa
                        const hamburgerIcon = mobileMenuToggle.querySelector('i');
                        if (hamburgerIcon) {
                            hamburgerIcon.className = 'fas fa-bars';
                        }
                    } else {
                        // Comportamiento normal en escritorio
                        if (sidebar.classList.contains('sidebar-collapsed')) {
                            // Expandir
                            sidebar.classList.remove('sidebar-collapsed');
                            sidebar.classList.add('sidebar-expanded');
                            
                            // Actualizar ícono y texto
                            const toggleIcon = toggleBtnBottom.querySelector('i');
                            if (toggleIcon) toggleIcon.className = 'fas fa-chevron-left';
                            
                            const toggleText = toggleBtnBottom.querySelector('.toggle-text');
                            if (toggleText) toggleText.textContent = 'Colapsar menú';
                        } else {
                            // Colapsar
                            sidebar.classList.remove('sidebar-expanded');
                            sidebar.classList.add('sidebar-collapsed');
                            
                            // Actualizar ícono y texto
                            const toggleIcon = toggleBtnBottom.querySelector('i');
                            if (toggleIcon) toggleIcon.className = 'fas fa-chevron-right';
                            
                            const toggleText = toggleBtnBottom.querySelector('.toggle-text');
                            if (toggleText) toggleText.textContent = 'Expandir menú';
                            
                            // Cerrar submenús abiertos
                            document.querySelectorAll('.has-submenu.open').forEach(item => {
                                item.classList.remove('open');
                            });
                        }
                    }
                }
                
                // Función para abrir/cerrar el menú en móviles
                function toggleMobileMenu() {
                    // Solo ejecutar en móvil
                    if (isMobile) {
                        // Alternar la clase mobile-open para mostrar/ocultar el menú
                        sidebar.classList.toggle('mobile-open');
                        
                        // Alternar la visibilidad del overlay
                        sidebarOverlay.classList.toggle('show');
                        
                        // Cambiar el icono del botón hamburguesa según el estado del menú
                        const hamburgerIcon = mobileMenuToggle.querySelector('i');
                        if (hamburgerIcon) {
                            if (sidebar.classList.contains('mobile-open')) {
                                // Cambiar a icono X cuando el menú está abierto
                                hamburgerIcon.className = 'fas fa-times';
                            } else {
                                // Volver al icono de hamburguesa cuando el menú está cerrado
                                hamburgerIcon.className = 'fas fa-bars';
                            }
                        }
                        
                        // Bloquear/desbloquear el scroll del body
                        document.body.style.overflow = sidebar.classList.contains('mobile-open') ? 'hidden' : '';
                    }
                }
                
                // Asignar eventos
                if (toggleBtnBottom) {
                    toggleBtnBottom.addEventListener('click', toggleSidebar);
                }
                
                if (mobileMenuToggle) {
                    mobileMenuToggle.addEventListener('click', toggleMobileMenu);
                }
                
                // Cerrar sidebar con overlay en dispositivos móviles
                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener('click', function() {
                        // Cerrar el menú
                        sidebar.classList.remove('mobile-open');
                        sidebarOverlay.classList.remove('show');
                        document.body.style.overflow = '';
                        
                        // Restaurar el icono de hamburguesa
                        const hamburgerIcon = mobileMenuToggle.querySelector('i');
                        if (hamburgerIcon) {
                            hamburgerIcon.className = 'fas fa-bars';
                        }
                    });
                }
                
                // Manejo de submenús
                const submenuItems = document.querySelectorAll('.has-submenu');
                
                submenuItems.forEach(item => {
                    const link = item.querySelector('.nav-link');
                    
                    if (link) {
                        link.addEventListener('click', function(e) {
                            // Si estamos en modo colapsado en escritorio, no abriremos submenús
                            if (!isMobile && sidebar.classList.contains('sidebar-collapsed')) {
                                // Permitir que el enlace funcione normalmente
                                return;
                            }
                            
                            // Si es un elemento con submenú, prevenir navegación al hacer clic en el enlace principal
                            e.preventDefault();
                            
                            // Cerrar otros submenús abiertos
                            submenuItems.forEach(otherItem => {
                                if (otherItem !== item && otherItem.classList.contains('open')) {
                                    otherItem.classList.remove('open');
                                }
                            });
                            
                            // Alternar estado del submenú actual
                            item.classList.toggle('open');
                        });
                    }
                });
                
                // Marcar activo según URL actual
                function setActiveMenuBasedOnUrl() {
                    const currentPath = window.location.pathname;
                    
                    // Primero intentamos encontrar una coincidencia exacta en los submenús
                    let found = false;
                    
                    document.querySelectorAll('.submenu-link').forEach(link => {
                        const href = link.getAttribute('href');
                        if (href && href !== '#' && currentPath.includes(href)) {
                            // Marcar este subenlace como activo
                            link.classList.add('active');
                            
                            // Abrir el submenú padre
                            const parentMenu = link.closest('.has-submenu');
                            if (parentMenu) {
                                parentMenu.classList.add('open');
                                parentMenu.querySelector('.nav-link').classList.add('active');
                            }
                            
                            found = true;
                        }
                    });
                    
                    // Si no encontramos coincidencia en los submenús, buscamos en los menús principales
                    if (!found) {
                        document.querySelectorAll('.nav-link').forEach(link => {
                            const href = link.getAttribute('href');
                            if (href && href !== '#' && currentPath.includes(href)) {
                                link.classList.add('active');
                                
                                // Si tiene submenú, lo expandimos
                                const parentItem = link.closest('.has-submenu');
                                if (parentItem) {
                                    parentItem.classList.add('open');
                                }
                            }
                        });
                    }
                }
                
                // Ejecutar al cargar
                setActiveMenuBasedOnUrl();
                
                // Panel de notificaciones
                function toggleNotifications() {
                    if (notificationsPanel) {
                        notificationsPanel.classList.toggle('open');
                    }
                    if (overlayNotifications) {
                        overlayNotifications.classList.toggle('open');
                    }
                }
                
                if (navNotificationsBtn) {
                    navNotificationsBtn.addEventListener('click', function() {
                        toggleNotifications();
                    });
                }
                
                if (closeNotifications) {
                    closeNotifications.addEventListener('click', function() {
                        notificationsPanel.classList.remove('open');
                        overlayNotifications.classList.remove('open');
                    });
                }
                
                if (overlayNotifications) {
                    overlayNotifications.addEventListener('click', function() {
                        notificationsPanel.classList.remove('open');
                        overlayNotifications.classList.remove('open');
                    });
                }
                
                // Tabs de notificaciones
                const tabs = document.querySelectorAll('.notifications-tab');
                tabs.forEach(tab => {
                    tab.addEventListener('click', function() {
                        tabs.forEach(t => t.classList.remove('active'));
                        this.classList.add('active');
                    });
                });
                
                // Dropdown del usuario
                if (userDropdownBtn) {
                    userDropdownBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        if (userDropdownMenu) {
                            userDropdownMenu.classList.toggle('show');
                        }
                    });
                    
                    // Cerrar el dropdown al hacer clic fuera de él
                    document.addEventListener('click', function(e) {
                        if (userDropdownMenu && userDropdownMenu.classList.contains('show') && !userDropdownBtn.contains(e.target)) {
                            userDropdownMenu.classList.remove('show');
                        }
                    });
                }
                
                // Detectar cambios de tamaño para ajustar la visualización
                window.addEventListener('resize', function() {
                    const newIsMobile = window.innerWidth < 992;
                    
                    // Si cambia entre móvil y escritorio o viceversa
                    if (newIsMobile !== isMobile) {
                        // Recargar la página para reiniciar todo el estado
                        location.reload();
                    }
                });
            });
        </script>
